<script>
    let showingEN = false;
    function toggleLanguage() {
        const pts = document.querySelectorAll('.pt-text');
        const ens = document.querySelectorAll('.en-text');
        showingEN = !showingEN;
        pts.forEach(p => p.style.display = showingEN ? 'none' : 'block');
        ens.forEach(p => p.style.display = showingEN ? 'block' : 'none');
    }
</script>

